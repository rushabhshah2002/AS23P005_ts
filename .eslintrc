{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "no-loops"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": { 
    "no-console": 2,// Remember, this means error!
    "no-loops/no-loops": 2, //for and while loops are not allowed
    "no-unsafe-optional-chaining": 1 ,//optional chaining is  allowed
    "no-explicit-any": 0 //any is allowed
  }
}
